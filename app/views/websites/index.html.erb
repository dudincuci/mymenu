<% content_for :title do %>
כל האתרים
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Domain</th>
      <th>Name servers</th>
      <th>Online</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.name %></td>
        <td><%= website.domain %></td>
        <td><%= website.name_servers %></td>
        <td><%= website.online %></td>
        <td><%= website.published_at %></td>
        <td><%= link_to 'Show', website %></td>
        <td><%= link_to 'Edit', edit_website_path(website) %></td>
        <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% content_for :buttons do %>
<%= link_to 'אתר חדש', new_website_path %>
<% end %>
