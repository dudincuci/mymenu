<h2>החלפת סיסמא</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group input-group-lg">
    <span class="input-group-addon"><i class="fa fa-user"></i></span>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: 'סיסמא, מינימום 6 תווים' %>
  </div>

  <div class="input-group input-group-lg">
    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'אימות סיסמא' %>
  </div>

  <button type="submit" class="float">החלף סיסמא</button>
 <% end %>
