<%- if controller_name != 'sessions' %>
  <%= link_to "התחברות", new_session_path(resource_name), class: 'float' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "הרשמה", new_registration_path(resource_name), class: 'float' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "שכחתי את הסיסמא", new_password_path(resource_name), class: 'float' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "לא קיבלתי מייל אימות", new_confirmation_path(resource_name), class: 'float' %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "לא קיבלתי מייל שחזור סיסמא", new_unlock_path(resource_name), class: 'float' %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "התחבר עם #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'float' %><br />
  <% end -%>
<% end -%>
